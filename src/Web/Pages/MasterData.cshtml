@page
@model MasterDataModel

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-database text-primary"></i> Master Data</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h5>Farmers</h5>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#farmerModal">
                    <i class="fas fa-plus"></i> Add
                </button>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                            <th>Contact</th>
                            <th>Village</th>
                            <th>Bank</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var farmer in Model.Farmers)
                        {
                            <tr>
                                <td>
                                    <strong>@farmer.name</strong>
                                    @if(!string.IsNullOrEmpty(farmer.email))
                                    {
                                        <br><small class="text-muted">@farmer.email</small>
                                    }
                                </td>
                                <td><span class="badge bg-primary">@farmer.code</span></td>
                                <td>@farmer.contact</td>
                                <td>@farmer.village, @farmer.taluka</td>
                                <td>
                                    @if(!string.IsNullOrEmpty(farmer.bank_name))
                                    {
                                        <small>@farmer.bank_name</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Not provided</small>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-info" onclick="viewFarmer(@farmer.id)" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-warning" onclick="editFarmer(@farmer.id)" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteFarmer(@farmer.id)" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h5>Customers</h5>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#customerModal">
                    <i class="fas fa-plus"></i> Add
                </button>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Type</th>
                            <th>City</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var customer in Model.Customers)
                        {
                            <tr>
                                <td>
                                    <strong>@customer.name</strong>
                                    @if(!string.IsNullOrEmpty(customer.email))
                                    {
                                        <br><small class="text-muted">@customer.email</small>
                                    }
                                </td>
                                <td>@customer.contact</td>
                                <td>
                                    @if(!string.IsNullOrEmpty(customer.customer_type))
                                    {
                                        <span class="badge bg-info">@customer.customer_type</span>
                                    }
                                </td>
                                <td>@customer.city</td>
                                <td>
                                    <button class="btn btn-sm btn-info" onclick="viewCustomer(@customer.id)" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-warning" onclick="editCustomer(@customer.id)" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteCustomer(@customer.id)" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Farmer Modal -->
<div class="modal fade" id="farmerModal">
