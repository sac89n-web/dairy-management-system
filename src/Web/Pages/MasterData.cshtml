<script>
function deleteFarmer(id) {
    if(confirm('Are you sure you want to delete this farmer?')) {
        fetch('/MasterData?handler=DeleteFarmer&id=' + id, { method: 'POST' })
        .then(() => location.reload())
        .catch(() => alert('Error deleting farmer'));
    }
}

function deleteCustomer(id) {
    if(confirm('Are you sure you want to delete this customer?')) {
        fetch('/MasterData?handler=DeleteCustomer&id=' + id, { method: 'POST' })
        .then(() => location.reload())
        .catch(() => alert('Error deleting customer'));
    }
}

async function viewFarmer(id) {
    try {
        const response = await fetch(`/MasterData?handler=GetFarmer&id=${id}`);
        const farmer = await response.json();
        
        document.getElementById('viewFarmerName').textContent = farmer.name;
        document.getElementById('viewFarmerCode').textContent = farmer.code;
        document.getElementById('viewFarmerContact').textContent = farmer.contact;
        document.getElementById('viewFarmerEmail').textContent = farmer.email || 'Not provided';
        document.getElementById('viewFarmerAddress').textContent = farmer.address || 'Not provided';
        document.getElementById('viewFarmerLocation').textContent = `${farmer.village}, ${farmer.taluka}, ${farmer.district}`;
        document.getElementById('viewFarmerBank').textContent = farmer.bank_name || 'Not provided';
        document.getElementById('viewFarmerAccount').textContent = farmer.account_number || 'Not provided';
        document.getElementById('viewFarmerAadhar').textContent = farmer.aadhar_number || 'Not provided';
        
        new bootstrap.Modal(document.getElementById('viewFarmerModal')).show();
    } catch (error) {
        alert('Error loading farmer details');
    }
}

async function viewCustomer(id) {
    try {
        const response = await fetch(`/MasterData?handler=GetCustomer&id=${id}`);
        const customer = await response.json();
        
        document.getElementById('viewCustomerName').textContent = customer.name;
        document.getElementById('viewCustomerContact').textContent = customer.contact;
        document.getElementById('viewCustomerEmail').textContent = customer.email || 'Not provided';
        document.getElementById('viewCustomerType').textContent = customer.customer_type;
        document.getElementById('viewCustomerAddress').textContent = customer.address || 'Not provided';
        document.getElementById('viewCustomerCity').textContent = `${customer.city}, ${customer.state}`;
        document.getElementById('viewCustomerGst').textContent = customer.gst_number || 'Not provided';
        
        new bootstrap.Modal(document.getElementById('viewCustomerModal')).show();
    } catch (error) {
        alert('Error loading customer details');
    }
}

async function editFarmer(id) {
    try {
        const response = await fetch(`/MasterData?handler=GetFarmer&id=${id}`);
        const farmer = await response.json();
        
        document.getElementById('editFarmerId').value = farmer.id;
        document.getElementById('editFarmerName').value = farmer.name;
        document.getElementById('editFarmerCode').value = farmer.code;
        document.getElementById('editFarmerContact').value = farmer.contact;
        document.getElementById('editFarmerEmail').value = farmer.email || '';
        document.getElementById('editFarmerAddress').value = farmer.address || '';
        document.getElementById('editFarmerVillage').value = farmer.village || '';
        document.getElementById('editFarmerTaluka').value = farmer.taluka || '';
        document.getElementById('editFarmerDistrict').value = farmer.district || '';
        document.getElementById('editFarmerState').value = farmer.state || 'Maharashtra';
