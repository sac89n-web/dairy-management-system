@page
@model InventoryModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-boxes text-primary"></i> Inventory Management</h2>
    <div>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#stockInModal">
            <i class="fas fa-plus"></i> Stock In
        </button>
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#stockOutModal">
            <i class="fas fa-minus"></i> Stock Out
        </button>
    </div>
</div>

<div class="row mb-4">
    @foreach(var item in Model.StockSummary)
    {
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5>@item.ItemName</h5>
                    <h3 class="@(item.CurrentStock < item.MinStock ? "text-danger" : "text-success")">
                        @item.CurrentStock @item.Unit
                    </h3>
                    <small class="text-muted">Min: @item.MinStock @item.Unit</small>
                </div>
            </div>
        </div>
    }
</div>

<div class="card">
    <div class="card-header">
        <h5>Recent Transactions</h5>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Item</th>
                    <th>Type</th>
                    <th>Quantity</th>
                    <th>Reference</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var transaction in Model.RecentTransactions)
                {
                    <tr>
                        <td>@transaction.transaction_date.ToString("dd/MM/yyyy")</td>
                        <td>@transaction.item_name</td>
                        <td>
                            <span class="badge @(transaction.transaction_type == "IN" ? "bg-success" : "bg-warning")">
                                @transaction.transaction_type
                            </span>
                        </td>
                        <td>@transaction.quantity @transaction.unit</td>
                        <td>@transaction.reference</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Stock In Modal -->
<div class="modal fade" id="stockInModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="StockIn">
                <div class="modal-header">
                    <h5>Stock In</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Item</label>
                        <select class="form-control" name="ItemId" required>
                            <option value="">Select Item</option>
                            @foreach(var item in Model.Items)
                            {
                                <option value="@item.id">@item.name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <input type="number" step="0.1" min="0.1" class="form-control" name="Quantity" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reference</label>
                        <input type="text" class="form-control" name="Reference" placeholder="Purchase order, supplier, etc.">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Stock Out Modal -->
<div class="modal fade" id="stockOutModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="StockOut">
                <div class="modal-header">
                    <h5>Stock Out</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Item</label>
                        <select class="form-control" name="ItemId" required>
                            <option value="">Select Item</option>
                            @foreach(var item in Model.Items)
                            {
                                <option value="@item.id">@item.name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <input type="number" step="0.1" min="0.1" class="form-control" name="Quantity" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reference</label>
                        <input type="text" class="form-control" name="Reference" placeholder="Sale order, customer, etc.">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>