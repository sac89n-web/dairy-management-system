<!-- Add Farmer Modal -->
<div class="modal fade" id="addFarmerModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-user-plus"></i> Add New Farmer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addFarmerForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Farmer Name</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Mobile Number</label>
                            <input type="tel" class="form-control" name="mobile" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">PAN Number</label>
                            <input type="text" class="form-control" name="pan" pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Aadhaar Number</label>
                            <input type="text" class="form-control" name="aadhaar" pattern="[0-9]{12}">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Bank Account</label>
                            <input type="text" class="form-control" name="account">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="category">
                                <option value="cow">Cow</option>
                                <option value="buffalo">Buffalo</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Address</label>
                            <textarea class="form-control" name="address" rows="3"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveFarmer()">Save Farmer</button>
            </div>
        </div>
    </div>
</div>

