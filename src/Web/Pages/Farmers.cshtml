@model FarmersModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1"><i class="fas fa-users text-primary"></i> Farmers & KYC</h2>
        <p class="text-muted mb-0">Farmer management with KYC verification</p>
    </div>
    <div>
