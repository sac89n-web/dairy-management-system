<!-- Search & Filter -->
<div class="card card-modern mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label text-muted small">SEARCH</label>
                <input type="text" class="form-control" placeholder="Name / ID / Mobile" id="searchInput">
            </div>
            <div class="col-md-2">
                <label class="form-label text-muted small">CATEGORY</label>
                <select class="form-select" id="categoryFilter">
                    <option>All</option>
                    <option>Cow</option>
                    <option>Buffalo</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label text-muted small">KYC STATUS</label>
                <select class="form-select" id="kycFilter">
                    <option>All</option>
                    <option>Verified</option>
                    <option>Pending</option>
                    <option>Rejected</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-outline-primary btn-modern w-100" onclick="applyFilters()">
                    <i class="fas fa-search"></i> Filter
                </button>
            </div>
        </div>
    </div>
</div>

