@page
@model RoleMasterModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-shield text-primary"></i> Role Master</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRoleModal">
        <i class="fas fa-plus"></i> Add Role
    </button>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Role Name</th>
                    <th>Description</th>
                    <th>Permissions</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td><span class="badge bg-danger">Admin</span></td>
                    <td>System Administrator</td>
                    <td>All Permissions</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editRole(1)">Edit</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td><span class="badge bg-primary">Manager</span></td>
                    <td>Dairy Manager</td>
                    <td>Collection, Sales, Reports</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editRole(2)">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteRole(2)">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td><span class="badge bg-success">Operator</span></td>
                    <td>Collection Operator</td>
                    <td>Milk Collection Only</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editRole(3)">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteRole(3)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Add Role Modal -->
<div class="modal fade" id="addRoleModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5>Add New Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Role Name</label>
                        <input type="text" class="form-control" name="roleName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Permissions</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="permissions" value="collection">
                            <label class="form-check-label">Milk Collection</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="permissions" value="sales">
                            <label class="form-check-label">Sales Management</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="permissions" value="reports">
                            <label class="form-check-label">Reports & Analytics</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="permissions" value="payments">
                            <label class="form-check-label">Payment Management</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Role</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function editRole(id) {
    alert('Edit role functionality - ID: ' + id);
}

function deleteRole(id) {
    if(confirm('Delete this role?')) {
        alert('Delete role - ID: ' + id);
    }
}
</script>