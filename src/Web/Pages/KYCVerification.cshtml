@page
@model KYCVerificationModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-check text-primary"></i> KYC Verification</h2>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5>Pending KYC</h5>
                <h3>@Model.PendingKYC</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Verified</h5>
                <h3>@Model.VerifiedKYC</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h5>Rejected</h5>
                <h3>@Model.RejectedKYC</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>Bank Verified</h5>
                <h3>@Model.BankVerified</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Farmer</th>
                    <th>PAN</th>
                    <th>Aadhaar</th>
                    <th>Bank Account</th>
                    <th>KYC Status</th>
                    <th>DigiLocker</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var farmer in Model.Farmers)
                {
                    <tr>
                        <td>@farmer.name</td>
                        <td>@farmer.pan_number</td>
                        <td>@farmer.aadhar_number</td>
                        <td>@farmer.account_number</td>
                        <td>
                            <span class="badge @(farmer.kyc_status == "Verified" ? "bg-success" : farmer.kyc_status == "Rejected" ? "bg-danger" : "bg-warning")">
                                @farmer.kyc_status
                            </span>
                        </td>
                        <td>
                            @if(farmer.digilocker_verified)
                            {
                                <span class="badge bg-success"><i class="fas fa-check"></i> Verified</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Not Verified</span>
                            }
                        </td>
                        <td>
                            @if(farmer.kyc_status == "Pending")
                            {
                                <button class="btn btn-sm btn-success" onclick="verifyKYC(@farmer.id)">Verify</button>
                                <button class="btn btn-sm btn-danger" onclick="rejectKYC(@farmer.id)">Reject</button>
                            }
                            <button class="btn btn-sm btn-info" onclick="verifyBank(@farmer.id)">Bank Check</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
async function verifyKYC(farmerId) {
    const btn = event.target;
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Verifying...';
    
    const response = await fetch('/KYCVerification?handler=Verify', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ farmerId })
    });
    
    if (response.ok) {
        const result = await response.json();
        if (result.verified) {
            alert('KYC Verified successfully via DigiLocker!');
        } else {
            alert(`KYC Verification failed:\nAadhar: ${result.aadharValid ? 'Valid' : 'Invalid'}\nPAN: ${result.panValid ? 'Valid' : 'Invalid'}`);
        }
        location.reload();
    } else {
        btn.disabled = false;
        btn.innerHTML = 'Verify';
        alert('Verification failed. Please try again.');
    }
}

async function rejectKYC(farmerId) {
    const response = await fetch('/KYCVerification?handler=Reject', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ farmerId })
    });
    if (response.ok) location.reload();
}

async function verifyBank(farmerId) {
    const response = await fetch('/KYCVerification?handler=BankVerify', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ farmerId })
    });
    if (response.ok) location.reload();
}
</script>