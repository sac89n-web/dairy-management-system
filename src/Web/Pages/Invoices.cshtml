@page
@model InvoicesModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-file-invoice text-primary"></i> Invoice Management</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateInvoiceModal">
        <i class="fas fa-plus"></i> Generate Invoice
    </button>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Today's Invoices</h5>
                <h3>@Model.TodayInvoices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Paid Invoices</h5>
                <h3>@Model.PaidInvoices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5>Pending Amount</h5>
                <h3>₹@Model.PendingAmount.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>Total Revenue</h5>
                <h3>₹@Model.TotalRevenue.ToString("N0")</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Invoice #</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Payment Method</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var invoice in Model.Invoices)
                {
                    <tr>
                        <td>@invoice.invoice_number</td>
                        <td>@invoice.customer_name</td>
                        <td>@invoice.invoice_date.ToString("dd/MM/yyyy")</td>
                        <td>₹@invoice.total_amount.ToString("N0")</td>
                        <td>
                            <span class="badge @(invoice.status == "Paid" ? "bg-success" : invoice.status == "Pending" ? "bg-warning" : "bg-danger")">
                                @invoice.status
                            </span>
                        </td>
                        <td>@invoice.payment_method</td>
                        <td>
                            <button class="btn btn-sm btn-info" onclick="viewInvoice(@invoice.id)">View</button>
                            @if(invoice.status == "Pending")
                            {
                                <button class="btn btn-sm btn-success" onclick="markPaid(@invoice.id)">Mark Paid</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Generate Invoice Modal -->
<div class="modal fade" id="generateInvoiceModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="GenerateInvoice">
                <div class="modal-header">
                    <h5>Generate Invoice</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Customer</label>
                        <select class="form-control" name="CustomerId" required>
                            <option value="">Select Customer</option>
                            @foreach(var customer in Model.Customers)
                            {
                                <option value="@customer.id">@customer.name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Items</label>
                        <div id="invoiceItems">
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <select class="form-control" name="ProductIds" required>
                                        <option value="">Select Product</option>
                                        @foreach(var product in Model.Products)
                                        {
                                            <option value="@product.id" data-price="@product.price">@product.name - ₹@product.price</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <input type="number" class="form-control" name="Quantities" placeholder="Quantity" min="1" required>
                                </div>
                                <div class="col-md-3">
                                    <input type="number" class="form-control" name="UnitPrices" placeholder="Unit Price" step="0.01" required>
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn btn-sm btn-success" onclick="addItem()">+</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Payment Method</label>
                        <select class="form-control" name="PaymentMethod" required>
                            <option value="Cash">Cash</option>
                            <option value="UPI">UPI</option>
                            <option value="Card">Card</option>
                            <option value="Credit">Credit</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Generate Invoice</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function addItem() {
    const container = document.getElementById('invoiceItems');
    const newItem = container.firstElementChild.cloneNode(true);
    newItem.querySelectorAll('input, select').forEach(input => input.value = '');
    container.appendChild(newItem);
}

function markPaid(invoiceId) {
    if(confirm('Mark this invoice as paid?')) {
        fetch(`/Invoices?handler=MarkPaid&id=${invoiceId}`, { method: 'POST' })
        .then(() => location.reload());
    }
}

function viewInvoice(invoiceId) {
    window.open(`/Invoices/View/${invoiceId}`, '_blank');
}
</script>