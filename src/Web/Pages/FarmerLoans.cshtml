@page
@model FarmerLoansModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-hand-holding-usd text-primary"></i> Farmer Loans & Advances</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLoanModal">
        <i class="fas fa-plus"></i> Add Loan/Advance
    </button>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5>Total Outstanding</h5>
                <h3>₹@Model.TotalOutstanding.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>This Month Disbursed</h5>
                <h3>₹@Model.MonthlyDisbursed.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>This Month Recovered</h5>
                <h3>₹@Model.MonthlyRecovered.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h5>Overdue Loans</h5>
                <h3>@Model.OverdueCount</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Farmer</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Outstanding</th>
                    <th>Due Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var loan in Model.Loans)
                {
                    <tr>
                        <td>@loan.farmer_name</td>
                        <td><span class="badge @(loan.loan_type == "Advance" ? "bg-info" : "bg-warning")">@loan.loan_type</span></td>
                        <td>₹@loan.amount.ToString("N0")</td>
                        <td>₹@loan.outstanding_amount.ToString("N0")</td>
                        <td>@loan.due_date.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @(loan.status == "Active" ? "bg-success" : loan.status == "Overdue" ? "bg-danger" : "bg-secondary")">
                                @loan.status
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-success" onclick="recordPayment(@loan.id)">Record Payment</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Loan Modal -->
<div class="modal fade" id="addLoanModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddLoan">
                <div class="modal-header">
                    <h5>Add Loan/Advance</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Farmer</label>
                        <select class="form-control" name="FarmerId" required>
                            <option value="">Select Farmer</option>
                            @foreach(var farmer in Model.Farmers)
                            {
                                <option value="@farmer.id">@farmer.name (@farmer.code)</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Type</label>
                        <select class="form-control" name="LoanType" required>
                            <option value="Advance">Advance</option>
                            <option value="Loan">Loan</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Amount</label>
                        <input type="number" min="100" class="form-control" name="Amount" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Due Date</label>
                        <input type="date" class="form-control" name="DueDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Interest Rate (%)</label>
                        <input type="number" step="0.1" min="0" max="36" class="form-control" name="InterestRate" value="0">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function recordPayment(loanId) {
    const amount = prompt('Enter payment amount:');
    if (amount && parseFloat(amount) > 0) {
        fetch(`/FarmerLoans?handler=RecordPayment&id=${loanId}&amount=${amount}`, { method: 'POST' })
        .then(() => location.reload());
    }
}
</script>