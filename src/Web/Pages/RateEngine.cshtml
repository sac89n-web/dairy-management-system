@page
@model RateEngineModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-calculator text-primary"></i> Enhanced Rate Engine</h2>
        <p class="text-muted">Phase 1: Dynamic FAT/SNF based pricing with incentives</p>
    </div>
    <div>
        <button class="btn btn-success me-2" onclick="importRates()">
            <i class="fas fa-upload"></i> Import Rates
        </button>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSlabModal">
            <i class="fas fa-plus"></i> Add Rate Slab
        </button>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Active Slabs</h5>
                <h3>12</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Avg Rate</h5>
                <h3>₹52.50</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5>Max Rate</h5>
                <h3>₹65.00</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>Min Rate</h5>
                <h3>₹35.00</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Rate Calculator</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label">FAT %</label>
                        <input type="number" step="0.1" class="form-control" id="fatInput" value="4.0">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">SNF %</label>
                        <input type="number" step="0.1" class="form-control" id="snfInput" value="8.5">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Quantity (L)</label>
                        <input type="number" step="0.1" class="form-control" id="quantityInput" value="10.0">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Calculated Rate</label>
                        <div class="input-group">
                            <span class="input-group-text">₹</span>
                            <input type="text" class="form-control" id="calculatedRate" readonly>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <button class="btn btn-success" onclick="calculateRate()">Calculate Rate</button>
                        <span class="ms-3">Total Amount: <strong id="totalAmount">₹0.00</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Current Rate Slabs</h5>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>FAT Range</th>
                    <th>SNF Range</th>
                    <th>Base Rate</th>
                    <th>Incentive</th>
                    <th>Effective From</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>3.0% - 3.5%</td>
                    <td>8.0% - 8.5%</td>
                    <td>₹45.00</td>
                    <td>₹2.00</td>
                    <td>01/08/2025</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editSlab(1)">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteSlab(1)">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td>3.5% - 4.0%</td>
                    <td>8.5% - 9.0%</td>
                    <td>₹52.00</td>
                    <td>₹3.00</td>
                    <td>01/08/2025</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editSlab(2)">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteSlab(2)">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td>4.0% - 4.5%</td>
                    <td>9.0% - 9.5%</td>
                    <td>₹58.00</td>
                    <td>₹4.00</td>
                    <td>01/08/2025</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editSlab(3)">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteSlab(3)">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td>4.5% - 5.0%</td>
                    <td>9.5% - 10.0%</td>
                    <td>₹65.00</td>
                    <td>₹5.00</td>
                    <td>01/08/2025</td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editSlab(4)">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteSlab(4)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Add Rate Slab Modal -->
<div class="modal fade" id="addSlabModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddSlab">
                <div class="modal-header">
                    <h5>Add Rate Slab</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">FAT Min %</label>
                                <input type="number" step="0.1" class="form-control" name="FatMin" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">FAT Max %</label>
                                <input type="number" step="0.1" class="form-control" name="FatMax" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">SNF Min %</label>
                                <input type="number" step="0.1" class="form-control" name="SnfMin" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">SNF Max %</label>
                                <input type="number" step="0.1" class="form-control" name="SnfMax" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Base Rate (₹/L)</label>
                                <input type="number" step="0.01" class="form-control" name="BaseRate" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Incentive (₹/L)</label>
                                <input type="number" step="0.01" class="form-control" name="Incentive" value="0">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Effective From</label>
                        <input type="date" class="form-control" name="EffectiveFrom" value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Rate Slab</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
async function calculateRate() {
    const fat = parseFloat(document.getElementById('fatInput').value);
    const snf = parseFloat(document.getElementById('snfInput').value);
    const quantity = parseFloat(document.getElementById('quantityInput').value);
    
    // Simple rate calculation without API call
    let rate = 35.0; // Base rate
    if (fat >= 4.0) rate += 10;
    if (fat >= 4.5) rate += 5;
    if (snf >= 8.5) rate += 5;
    if (snf >= 9.0) rate += 3;
    
    const totalAmount = rate * quantity;
    
    document.getElementById('calculatedRate').value = rate.toFixed(2);
    document.getElementById('totalAmount').textContent = '₹' + totalAmount.toFixed(2);
}

async function deleteSlab(id) {
    if (confirm('Delete this rate slab?')) {
        alert('Rate slab deleted successfully!');
        location.reload();
    }
}

function editSlab(id) {
    alert('Edit rate slab functionality - ID: ' + id);
}

function importRates() {
    const input = document.createElement('input');
    input.type = 'file';
    input.accept = '.csv,.xlsx';
    input.onchange = function(e) {
        const file = e.target.files[0];
        if(file) {
            alert('Importing rates from: ' + file.name);
            // Process file upload
        }
    };
    input.click();
}

// Auto-calculate on input change
document.getElementById('fatInput').addEventListener('input', calculateRate);
document.getElementById('snfInput').addEventListener('input', calculateRate);
document.getElementById('quantityInput').addEventListener('input', calculateRate);

// Initial calculation
calculateRate();
</script>