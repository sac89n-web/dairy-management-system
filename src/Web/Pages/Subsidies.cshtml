@page
@model SubsidiesModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-hand-holding-usd text-primary"></i> Government Subsidies & Incentives</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#applySubsidyModal">
        <i class="fas fa-plus"></i> Apply for Subsidy
    </button>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Cow Milk Subsidy</h5>
                <h3>₹@Model.CowMilkSubsidy.ToString("N0")</h3>
                <p>₹5 per liter</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>Total Applied</h5>
                <h3>₹@Model.TotalApplied.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5>Pending Approval</h5>
                <h3>₹@Model.PendingApproval.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Received</h5>
                <h3>₹@Model.ReceivedAmount.ToString("N0")</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Subsidy Applications</h5>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Application ID</th>
                    <th>Scheme</th>
                    <th>Period</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Applied Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var subsidy in Model.SubsidyApplications)
                {
                    <tr>
                        <td>@subsidy.application_id</td>
                        <td>@subsidy.scheme_name</td>
                        <td>@subsidy.period_from.ToString("MMM yyyy") - @subsidy.period_to.ToString("MMM yyyy")</td>
                        <td>₹@subsidy.amount.ToString("N2")</td>
                        <td>
                            <span class="badge @(subsidy.status == "Approved" ? "bg-success" : subsidy.status == "Pending" ? "bg-warning" : "bg-danger")">
                                @subsidy.status
                            </span>
                        </td>
                        <td>@subsidy.applied_date.ToString("dd/MM/yyyy")</td>
                        <td>
                            <button class="btn btn-sm btn-info">Track</button>
                            @if(subsidy.status == "Approved")
                            {
                                <button class="btn btn-sm btn-success">Download Certificate</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Apply Subsidy Modal -->
<div class="modal fade" id="applySubsidyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="ApplySubsidy">
                <div class="modal-header">
                    <h5>Apply for Subsidy</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Scheme</label>
                        <select class="form-control" name="SchemeId" required>
                            <option value="1">Cow Milk Subsidy (₹5/L)</option>
                            <option value="2">Quality Incentive</option>
                            <option value="3">Equipment Subsidy</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Period From</label>
                            <input type="month" class="form-control" name="PeriodFrom" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Period To</label>
                            <input type="month" class="form-control" name="PeriodTo" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Apply</button>
                </div>
            </form>
        </div>
    </div>
</div>