@page
@model TankerIntakeModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-truck text-primary"></i> Tanker/Bulk Intake & Processing</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addIntakeModal">
        <i class="fas fa-plus"></i> Record Intake
    </button>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>Today's Intake</h5>
                <h3>@Model.TodayIntake.ToString("F0") L</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5>Processing</h5>
                <h3>@Model.ProcessingBatches</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Processed</h5>
                <h3>@Model.ProcessedBatches</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Avg Temperature</h5>
                <h3>@Model.AvgTemperature.ToString("F1")°C</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Batch ID</th>
                    <th>Tanker No</th>
                    <th>Weight (L)</th>
                    <th>FAT %</th>
                    <th>SNF %</th>
                    <th>Temperature</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var batch in Model.TankerBatches)
                {
                    <tr>
                        <td>@batch.batch_id</td>
                        <td>@batch.tanker_number</td>
                        <td>@batch.weight_liters.ToString("F0") L</td>
                        <td>@batch.fat_pct.ToString("F1")%</td>
                        <td>@batch.snf_pct.ToString("F1")%</td>
                        <td>@batch.temperature.ToString("F1")°C</td>
                        <td>
                            <span class="badge @GetStatusBadge(batch.status)">@batch.status</span>
                        </td>
                        <td>
                            @if(batch.status == "Received")
                            {
                                <button class="btn btn-sm btn-warning" onclick="updateStatus('@batch.batch_id', 'Processing')">Start Processing</button>
                            }
                            else if(batch.status == "Processing")
                            {
                                <button class="btn btn-sm btn-success" onclick="updateStatus('@batch.batch_id', 'Processed')">Mark Processed</button>
                            }
                            <button class="btn btn-sm btn-info" onclick="viewTrace('@batch.batch_id')">Trace Log</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Intake Modal -->
<div class="modal fade" id="addIntakeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddIntake">
                <div class="modal-header">
                    <h5>Record Tanker Intake</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Tanker Number</label>
                        <input type="text" class="form-control" name="TankerNumber" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Weight (Liters)</label>
                                <input type="number" step="0.1" class="form-control" name="WeightLiters" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Temperature (°C)</label>
                                <input type="number" step="0.1" class="form-control" name="Temperature" value="4.0" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">FAT %</label>
                                <input type="number" step="0.1" class="form-control" name="FatPct" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">SNF %</label>
                                <input type="number" step="0.1" class="form-control" name="SnfPct" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Supplier</label>
                        <input type="text" class="form-control" name="Supplier">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Record Intake</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
async function updateStatus(batchId, status) {
    const response = await fetch('/TankerIntake?handler=UpdateStatus', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ batchId, status })
    });
    if (response.ok) location.reload();
}

function viewTrace(batchId) {
    alert('Trace log for batch: ' + batchId + '\n\nReceived → Processing → Processed → Dispatched');
}
</script>

@functions {
    string GetStatusBadge(string status)
    {
        return status switch
        {
            "Received" => "bg-info",
            "Processing" => "bg-warning",
            "Processed" => "bg-success",
            "Dispatched" => "bg-primary",
            _ => "bg-secondary"
        };
    }
}