@page
@model PaymentsModel
<h1>Payments</h1>
<h2>Customer Payments</h2>
<table>
    <thead>
        <tr>
            <th>Customer</th>
            <th>Sale</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Invoice</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CustomerPayments)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.SaleId</td>
                <td>@item.Amount</td>
                <td>@item.Date</td>
                <td>@item.InvoiceNo</td>
            </tr>
        }
    </tbody>
</table>
<h2>Farmer Payments</h2>
<table>
    <thead>
        <tr>
            <th>Farmer</th>
            <th>Milk Collection</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Invoice</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FarmerPayments)
        {
            <tr>
                <td>@item.FarmerId</td>
                <td>@item.MilkCollectionId</td>
                <td>@item.Amount</td>
                <td>@item.Date</td>
                <td>@item.InvoiceNo</td>
            </tr>
        }
    </tbody>
</table>
